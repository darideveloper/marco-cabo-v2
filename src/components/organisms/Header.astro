---
import { navLinks } from '../../libs/constants/navLinks'
import Logo from '../atoms/Logo.astro'
---

<header
  class:list={[
    'container',
    'absolute top-0 left-0 right-0 z-99',
    'px-2 py-2 lg:px-8 lg:py-4',
  ]}
>
  <div
    class:list={[
      'flex justify-between items-center',
      'p-2 lg:p-4',
      'border-4 border-red rounded-4xl',
    ]}
  >
    <!-- Logo -->
    <Logo />

    <!-- Navigation -->
    <nav aria-label="Main navigation">
      <ul
        class:list={[
          'flex items-center gap-4 lg:gap-8',
          'm-0 p-0',
          'list-none',
        ]}
      >
        {
          navLinks.map((link) => {
            const currentPath = Astro.url.pathname
            const isActive = currentPath === link.href || 
                           (link.href !== '/' && currentPath.startsWith(link.href))
            return (
              <li>
                <a
                  href={link.href}
                  class:list={[
                    'text-white text-base font-medium uppercase tracking-wide',
                    'hover:text-red',
                    'transition-colors duration-200',
                  ]}
                  aria-current={isActive ? 'page' : undefined}
                >
                  {link.label}
                </a>
              </li>
            )
          })
        }
      </ul>
    </nav>
  </div>
</header>
