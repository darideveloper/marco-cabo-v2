---
import { navLinks } from '../../libs/constants/navLinks'
import H2 from '../atoms/H2'
import H3 from '../atoms/H3'
import Logo from '../atoms/Logo.astro'
import CopyrightLinks from '../molecules/CopyrightLinks.astro'
import SocialLinks from '../molecules/SocialLinks.astro'
import { Mail, Phone, MapPin } from '@lucide/astro'

// Get contact data
import { email, phone, socialLinks } from '../../libs/constants/contact'
---

<footer class:list={['w-full']}>
  <!-- Top Section -->
  <div class:list={['container', 'py-8 lg:py-12']}>
    <div class:list={['grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12']}>
      <!-- Left Column: Logo, Text, Socials -->
      <div
        class:list={[
          'flex flex-col',
          'gap-4',
          'items-center lg:items-start',
          'text-center lg:text-start',
        ]}
      >
        <Logo className='h-20 w-auto' />
        <H2
          client:load
          className='text-xl! px-8'
        >
          Your Vacation Planner
        </H2>

        <SocialLinks data={socialLinks} />
      </div>
      <!-- Middle Column: Menu -->
      <div
        class:list={[
          'flex flex-col',
          'gap-4',
          'items-center lg:items-start',
          'text-center lg:text-start',
        ]}
      >
        <H3
          client:load
          className='text-black uppercase m-0 mb-2'
        >
          Menu
        </H3>
        <nav>
          <ul
            class:list={[
              'flex flex-col',
              'gap-2 lg:gap-3',
              'm-0 p-0',
              'list-none',
              'items-center lg:items-start',
            ]}
          >
            {
              navLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class:list={[
                      'text-black text-sm lg:text-base',
                      'hover:text-red',
                      'transition-colors duration-200',
                      'uppercase',
                    ]}
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <!-- Right Column: Contact -->
      <div
        class:list={[
          'flex flex-col',
          'gap-4',
          'items-center lg:items-start',
          'text-center lg:text-start',
        ]}
      >
        <H3
          client:load
          className='text-black uppercase m-0 mb-2'
        >
          Contact
        </H3>
        <div
          class:list={[
            'flex flex-col',
            'gap-2 lg:gap-3',
            'text-black text-sm lg:text-base',
            'items-center lg:items-start',
          ]}
        >
          <p class:list={['m-0', 'flex items-center gap-2']}>
            <Mail class='w-4 h-4 shrink-0' />
            <a
              href={`mailto:${email}`}
              class:list={[
                'text-black',
                'hover:text-red',
                'transition-colors duration-200',
              ]}
            >
              {email}
            </a>
          </p>
          <p class:list={['m-0', 'flex items-center gap-2']}>
            <Phone class='w-4 h-4 shrink-0' />
            <a
              href={`tel:${phone.replace(/ /g, '')}`}
              class:list={[
                'text-black',
                'hover:text-red',
                'transition-colors duration-200',
              ]}
            >
              {phone}
            </a>
          </p>
          <p class:list={['m-0', 'text-black', 'flex items-center gap-2']}>
            <MapPin class='w-4 h-4 shrink-0' />
            Los Cabos, Baja California Sur, MÃ©xico
          </p>
        </div>
      </div>
    </div>
  </div>

  <CopyrightLinks />
</footer>
