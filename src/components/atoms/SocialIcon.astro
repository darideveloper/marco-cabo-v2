---
interface Props {
  href: string;
  label?: string;
  className?: string;
}

let { href, label, className } = Astro.props;
---

<a 
  href={href} 
  target="_blank"
  rel="noopener noreferrer"
  aria-label={label}
  class:list={[
    'text-black',
    'hover:text-red',
    'transition-colors duration-200',
    'flex items-center',
    className
  ]}
>
  <slot />
</a>
