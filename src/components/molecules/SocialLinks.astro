---
import { Facebook } from '@lucide/astro';
import { Instagram } from '@lucide/astro';
import SocialLink from '../atoms/SocialLink.astro';

interface SocialLinkData {
  iconName: string;
  href: string;
  label?: string;
}

interface Props {
  data?: SocialLinkData[];
}

let { data = [] } = Astro.props;

const iconMap: Record<string, any> = {
  facebook: Facebook,
  instagram: Instagram,
};
---

<div class:list={['flex items-center justify-start px-8 gap-4']}>
  {data.map((social) => {
    const IconComponent = iconMap[social.iconName.toLowerCase()];
    if (!IconComponent) return null;
    
    return (
      <SocialLink href={social.href} label={social.label}>
        <IconComponent class="w-5 h-5" />
      </SocialLink>
    );
  })}
</div>
