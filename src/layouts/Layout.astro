---
// Fonts
import '@fontsource-variable/montserrat'

// Styles
import '../styles/global.css'

// Components
import Header from '../components/organisms/Header.astro'
import Footer from '../components/organisms/Footer.astro'

// Utils
import AOSInit from '../components/utils/AOSinit'

interface Props {
  title?: string
  description?: string
}
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/x-icon'
      href='/favicon.ico'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <slot name='seo' />
  </head>
  <body>
    <!-- AOS Init -->
    <AOSInit client:load />

    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
