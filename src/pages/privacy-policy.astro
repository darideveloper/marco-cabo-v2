---
// Libs
import { getEntry } from 'astro:content'

// Components
import Layout from '../layouts/Layout.astro'
import Hero from '../components/organisms/Hero.astro'

// Get page content
const privacyPolicy = await getEntry('legal', 'privacy-policy')

if (!privacyPolicy) {
  throw new Error('Privacy policy content not found')
}

const { Content } = await privacyPolicy.render()
const pageTitle = privacyPolicy.data.title ?? 'Privacy Policy | Mar Co. CABO'
const pageDescription =
  privacyPolicy.data.description ??
  'Learn how Mar Co. CABO collects, uses, and protects your personal information.'
---

<Layout
  title={pageTitle}
  description={pageDescription}
>
  <Hero
    title='Privacy Policy'
    description='Learn how we collect, use, and protect your personal information.'
    image='/images/privacy/white-esclade.webp'
  />
  <fragment slot='head'>
    <meta
      property='og:title'
      content={pageTitle}
    />
    <meta
      property='og:description'
      content={pageDescription}
    />
    <meta
      property='og:type'
      content='website'
    />
    <link
      rel='canonical'
      href={`${Astro.url.origin}/privacy-policy`}
    />
  </fragment>

  <section class='container mx-auto px-4 py-16 lg:py-24'>
    <article
      class='max-w-3xl mx-auto text-black prose prose-lg prose-headings:font-title prose-headings:text-black prose-p:text-black prose-strong:text-black prose-a:text-red prose-a:no-underline hover:prose-a:underline prose-li:text-black prose-ul:list-disc prose-ul:pl-6 prose-ul:space-y-2'
    >
      <Content />
    </article>
  </section>
</Layout>

<style>
  :global(.prose) {
    max-width: none;
  }

  :global(.prose h1) {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  :global(.prose h2) {
    font-size: 1.875rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  :global(.prose p) {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  :global(.prose ul) {
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  :global(.prose li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  :global(.prose a) {
    color: var(--color-red);
    transition: color 0.2s;
  }

  :global(.prose a:hover) {
    text-decoration: underline;
  }

  :global(.prose strong) {
    font-weight: 600;
    color: var(--color-black);
  }
</style>
