---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/organisms/Hero.astro'
import Vehicles from '../components/organisms/Vehicles.astro'
import Trips from '../components/organisms/Trips.astro'
import Destinations from '../components/organisms/Destinations.astro'
import InfoCards from '../components/organisms/InfoCards.astro'
import Planning from '../components/organisms/Planning.astro'
import GoogleReviews from '../components/organisms/GoogleReviews.astro'
import PageSEO from '../components/utils/PageSEO.astro'
---

<Layout>
  <PageSEO
    slot='seo'
    currentPage='Home'
    pageDescription='Premium private transportation and vacation planning in Los Cabos, Mexico.'
    extraKeywords='private transportation, vacation planning, los cabos, baja california sur, mexico, vacation packages, luxury transportation, airport transfers, private tours, car service, luxury cars, limousine service'
    canonicalUrl={`${Astro.url.origin}${Astro.url.pathname}`}
  />
  <Hero
    title='Airport Transportation in Los Cabos'
    image='/images/hero.webp'
  >
    Reserving your luxury Airport Transportation in Los Cabos is now fast and
    easy. Enjoy unmatched comfort and style.
  </Hero>
  <Vehicles />
  <Trips />
  <Destinations />
  <InfoCards />
  <!-- <GoogleReviews /> -->
  <Planning />
</Layout>
